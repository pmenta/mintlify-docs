{
  "$schema": "https://mintlify.com/schema.json",
  "name": "JUDIT - Docs",
  "logo": {
    "dark": "/logo/dark.svg",
    "light": "/logo/light.svg"
  },
  "favicon": "/favicon.png",
  "colors": {
    "primary": "#15BE62",
    "light": "#0CAE56",
    "dark": "#15BE62"
  },
  "modeToggle": {
    "default": "dark",
    "isHidden": true
  },
  "topbarCtaButton": {
    "name": "Dashboard",
    "url": "https://app.judit.io"
  },
  "tabs": [
    {
      "name": "Referência da API",
      "url": "api-reference"
    }
  ],
  "navigation": [
    {
      "group": "Comece a usar",
      "pages": ["introduction", "quickstart"]
    },
    {
      "group": "Essenciais",
      "pages": [
        "essentials/requests",
        "essentials/tracking",
        "essentials/callbacks",
        "essentials/glossary"
      ]
    },
    {
      "group": "Busca",
      "pages": [
        {
          "group": "Buscas",
          "pages": [
            "api-reference/endpoint/requests/create",
            "api-reference/endpoint/requests/find-many",
            "api-reference/endpoint/requests/find-one"
          ]
        },
        {
          "group": "Respostas",
          "pages": [
            "api-reference/endpoint/responses/find-many",
            "api-reference/endpoint/responses/find-one"
          ]
        }
      ]
    },
    {
      "group": "Monitoramento",
      "pages": [
        "api-reference/endpoint/tracking/create",
        "api-reference/endpoint/tracking/find-many",
        "api-reference/endpoint/tracking/find-one",
        "api-reference/endpoint/tracking/pause",
        "api-reference/endpoint/tracking/resume",
        "api-reference/endpoint/tracking/delete"
      ]
    }
  ],
  "primaryTab": {
    "name": "Documentação"
  },
  "api": {
    "baseUrl": ["https://requests.prod.judit.io", "https://tracking.prod.judit.io"],
    "auth": {
      "method": "key",
      "name": "api-key"
    },
    "playground": {
      "mode": "show"
    }
  },
  "backgroundImage": "/images/background.png"
}
